<div class="card-deck">
  <% @guardians.each do |guardian| %>
  <div class="card">
    <img class="card-img-top" src="<%= guardian.image %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= guardian.last_name %>, <%= guardian.first_name %></h5>
      <p class="card-text">
        Email: <%= guardian.email %>
      </p>
      <p class="card-text">
        Phone: <%= guardian.phone %>
      </p>
      <p>
        Students:
      </p>
      <% guardian.students.each do |student| %>
      <p class="card-text">
          <%= link_to "#{student.last_name}, #{student.first_name}", teacher_student_path(student) %>
      </p>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
