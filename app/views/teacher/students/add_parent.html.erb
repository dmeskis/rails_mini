<h1 class='text-center'>Create Guardian/Student Relations</h1>

<%= form_tag teacher_relations_submit_path do %>
  <div>
    <%= collection_select(:student, :student_id, @students, :id, :full_name, prompt: true) %>
  </div>
  <div>
    <%= collection_select(:user, :user_id, @guardians, :id, :full_name, prompt: true) %>
  </div>
    <%= submit_tag "Confirm Relation" %>
<% end %>
