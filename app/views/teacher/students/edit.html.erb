<h1 class='text-center'>Edit <%= @student.first_name %> <%= @student.last_name %></h1>

<div class="card mx-auto" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Create Student</h5>
    <%= form_for [@teacher, @student],  url: teacher_student_path(@student) do |f| %>
      <div>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
      <%= f.file_field :image %>
      <%= f.submit "Confirm Changes" %>
    <% end %>
  </div>
</div>
