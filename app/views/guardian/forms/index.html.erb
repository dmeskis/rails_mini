<h1 class='text-center'>Your Student Forms</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Form Link</th>
      <th scope="col">Last</th>
      <th scope="col">First</th>
    </tr>
  </thead>
  <tbody>
    <% @forms.each do |form| %>
    <tr>
      <th scope="row"><%= form.created_at.strftime("%F") %></th>
      <td><%= link_to "View Form", guardian_form_path(form) %></td>
      <td><%= form.student.last_name %></td>
      <td><%= form.student.first_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
